{
  "name": "caves",
  "version": "1.0.0",
  "description": "A browser-based text adventure game engine",
  "main": "./server/index.js",
  "scripts": {
    "install": "npm run build",
    "pretest": "npm run buildtests",
    "test": "npm run testserver && npm run testclient",
    "start": "node .",
    "build": "npm run buildserver && npm run buildclient",
    "prebuildclient": "rm -rf ./client",
    "buildclient": "npm run buildclientjs && npm run buildclientcss",
    "buildclientjs": "webpack",
    "buildclientcss": "lessc ./src/client/app.less ./client/caves.css",
    "postbuildclient": "cp ./src/client/index.html ./client/index.html",
    "prebuildserver": "rm -rf ./server",
    "buildserver": "tsc --project server.tsconfig.json",
    "prebuildtests": "rm -rf ./testLib",
    "buildtests": "tsc --project test.tsconfig.json",
    "prebuilddocs": "rm -rf ./docs",
    "builddocs": "typedoc --out docs --excludePrivate",
    "testclient": "phantomjs ./test/client/Client.test.js",
    "testserver": "mocha \"testLib/**/server/**/*.test.js\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DigitalMugen/caves.git"
  },
  "keywords": [],
  "author": "Bill Robitske, Jr.",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/DigitalMugen/caves/issues"
  },
  "homepage": "https://github.com/DigitalMugen/caves#readme",
  "devDependencies": {
    "@types/body-parser": "^1.16.4",
    "@types/chai": "^4.0.1",
    "@types/express": "^4.0.36",
    "@types/mocha": "^2.2.41",
    "awesome-typescript-loader": "^3.2.1",
    "chai": "^4.0.2",
    "less": "^2.7.2",
    "mocha": "^3.4.2",
    "source-map-loader": "^0.2.1",
    "typedoc": "^0.7.1",
    "typescript": "^2.4.1",
    "webpack": "^3.1.0"
  },
  "dependencies": {
    "body-parser": "^1.17.2",
    "compromise": "^10.6.1",
    "express": "^4.15.3"
  }
}
