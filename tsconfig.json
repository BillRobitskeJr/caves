{
  "compilerOptions": {
    /* Basic Options */
    "target": "es6",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./server/",
    
    /* Strict Type-Checking Options */
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true
  },
  "include": [
    "./src/**/*"
  ]
}